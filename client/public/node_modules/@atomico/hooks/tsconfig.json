{
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.js", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "atomico",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
